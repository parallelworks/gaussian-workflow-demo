<tool id='gaussian' name='gaussian'>
  <command interpreter='bash'>workflow_launcher.sh</command>
  <inputs>
    <section name='files' type='section' title='Gaussian input files' expanded='true'>
      <param name='inp' label='Molecular definition' type='data' format='inp' value='o2.inp' width='50%' help='Gaussian .inp format' argument='input'></param>
      <param name='chk_if_true' type='boolean' truevalue='Yes' falsevalue='No' checked='false' label='Checkpoint' help='Assumes presence of .chk file in same directory as .inp' width='50%_none' float='right'> </param>
    </section>
    <section name='g16' type='section' title='Gaussian run parameters' expanded='true'>
      <param name='ram' label='RAM' type='integer' min='0' max='384' value='80' width='50%' help='Gaussian RAM (will add 20GB for overhead); 0 => all avail. RAM'></param>
      <param name='cpu' label='CPU' type='integer' min='1' max='128' value='16' width='50%' help='Gaussian number of CPUs'></param>
      <param name='gpu_if_true' type='boolean' truevalue='Yes' falsevalue='No' checked='false' label='GPU' help='Will send to GPU node' width='50%_none' float='right'> </param>
    </section>
  </inputs>
</tool>
